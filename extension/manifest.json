{
  "name": "Rainforest Tester Notifier [DEV]",
  "version": "2.1.0",
  "manifest_version": 2,
  "description": "Notifies Rainforest Testers when there is new work to be done.",
  "homepage_url": "https://portal.rainforestqa.com",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "index_dev.html",
    "persistent": true
  },
  "options_ui": {
    "page": "options_dev.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icons/icon19_grey.png"
  },
  "externally_connectable": {
    "matches": ["*://*.rainforest.dev/*", "*://*.rainforest.test/*", "http://localhost:3000/*"]
  },
  "permissions": [
    "cookies",
    "idle",
    "notifications",
    "tabs",
    "storage",
    "contextMenus",
    "identity",
    "identity.email",
    "*://*.getsentry.com/*",
    "*://*.rainforest.dev/*",
    "*://*.rainforest.test/*",
    "*://*.rainforestqa.com/*"
  ],
  "content_security_policy": "script-src 'self' http://localhost:8123 https://cdnjs.cloudflare.com; object-src 'self'"
}
