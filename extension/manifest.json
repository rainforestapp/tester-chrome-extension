{
  "name": "Rainforest Tester Notifier [DEV]",
  "version": "1.2.0",
  "manifest_version": 2,
  "description": "Notifies Rainforest Testers when there is new work to be done.",
  "homepage_url": "https://portal.rainforestqa.com",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon16.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "js/main.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "externally_connectable": {
    "matches": ["*://portal.rainforest.dev/*"]
  },
  "permissions": [
    "cookies",
    "idle",
    "notifications",
    "tabs",
    "storage",
    "identity",
    "identity.email",
    "*://*.rainforest.dev/*",
    "*://*.rainforestqa.com/*"
  ]
}